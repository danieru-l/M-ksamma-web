    <script src="../shared.js"></script>
    <script>
        // Build letter navigation
        const letters = new Set();
        document.querySelectorAll('.glossary-term').forEach(t => letters.add(t.dataset.letter));
        const nav = document.getElementById('letter-nav');
        [...letters].sort().forEach(l => {
            const a = document.createElement('a');
            a.href = '#';
            a.textContent = l;
            a.onclick = (e) => { e.preventDefault(); scrollToLetter(l); };
            nav.appendChild(a);
        });

        function scrollToLetter(letter) {
            const el = document.querySelector(`.glossary-term[data-letter="${letter}"]`);
            if (el) el.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        function filterGlossary(query) {
            const q = query.toLowerCase().trim();
            document.querySelectorAll('.glossary-term').forEach(term => {
                const text = term.textContent.toLowerCase();
                term.style.display = text.includes(q) || q === '' ? '' : 'none';
            });
        }
    </script>
    <script src="../magic-cursor.js"></script>
